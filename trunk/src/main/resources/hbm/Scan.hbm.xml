<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="uk.ac.ebi.jmzml.model.mzml">
    <union-subclass name="Scan" table="Scan" extends="ParamGroup">
        <one-to-one name="scanWindowList" cascade="all" class="ScanWindowList"/>

        <property name="spectrumRef" type="string"/>
        <many-to-one name="sourceFile" cascade="all" class="SourceFile"/>
        <property name="externalSpectrumID" type="string"/>
        <many-to-one name="instrumentConfiguration" cascade="all" class="InstrumentConfiguration"/>
    </union-subclass>
</hibernate-mapping>
