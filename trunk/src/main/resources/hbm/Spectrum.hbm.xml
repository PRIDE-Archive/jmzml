<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzml.model.mzml.Spectrum" table="Spectrum"
                    extends="uk.ac.ebi.jmzml.model.mzml.ParamGroup">

        <list name="scanList" access="field" cascade="all" table="Scan">
            <key column="Spectrum_hid"/>
            <index column="Spectrum_idx"/>
            <one-to-many class="uk.ac.ebi.jmzml.model.mzml.Scan"/>
        </list>

        <list name="precursorList" access="field" cascade="all" table="Precursor">
            <key column="Spectrum_hid"/>
            <index column="Spectrum_idx"/>
            <one-to-many class="uk.ac.ebi.jmzml.model.mzml.Precursor"/>
        </list>

        <list name="productList" access="field" cascade="all" table="Product">
            <key column="Spectrum_hid"/>
            <index column="Spectrum_idx"/>
            <one-to-many class="uk.ac.ebi.jmzml.model.mzml.Product"/>
        </list>

        <list name="binaryDataArrayList" access="field" cascade="all" table="BinaryDataArray">
            <key column="Spectrum_hid"/>
            <index column="Spectrum_idx"/>
            <one-to-many class="uk.ac.ebi.jmzml.model.mzml.BinaryDataArray"/>
        </list>


        <property name="id" type="string"/>
        <property name="spotID" type="string"/>
        <property name="index" column="index_order" type="big_integer"/>
        <property name="defaultArrayLength" type="integer"/>

        <property name="dataProcessingRef" type="string"/>
        <!--<many-to-one name="dataProcessing" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.DataProcessing" column="DataProcessing_hid"/>-->
        <property name="sourceFileRef" type="string"/>
        <!--<many-to-one name="sourceFile" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.SourceFile" column="SourceFile_hid"/>-->
    </union-subclass>
</hibernate-mapping>
