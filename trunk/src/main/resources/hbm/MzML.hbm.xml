<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzml.model.mzml.MzML" table="MzML">
        <id name="hid" type="long" access="field">
            <column name="hid"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>

        <one-to-one name="cvList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.CVList"/>
        <one-to-one name="fileDescription" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.FileDescription"/>
        <one-to-one name="referenceableParamGroupList" cascade="all"
                    class="uk.ac.ebi.jmzml.model.mzml.ReferenceableParamGroupList"/>
        <one-to-one name="sampleList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.SampleList"/>
        <one-to-one name="softwareList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.SoftwareList"/>
        <one-to-one name="scanSettingsList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.ScanSettingsList"/>
        <one-to-one name="instrumentConfigurationList" cascade="all"
                    class="uk.ac.ebi.jmzml.model.mzml.InstrumentConfigurationList"/>
        <one-to-one name="dataProcessingList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.DataProcessingList"/>
        <one-to-one name="run" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.Run"/>
        <property name="accession" type="string"/>
        <property name="version" type="string"/>
        <property name="id" type="string"/>
    </class>
</hibernate-mapping>