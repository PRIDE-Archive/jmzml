<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzml.model.mzml.InstrumentConfiguration" table="InstrumentConfiguration"
                    extends="uk.ac.ebi.jmzml.model.mzml.ParamGroup">
        <one-to-one name="componentList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.ComponentList"/>
        <many-to-one name="softwareRef" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.SoftwareRef"/>
        <property name="id" type="string"/>
        <many-to-one name="scanSettings" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.ScanSettings"/>
    </union-subclass>
</hibernate-mapping>
