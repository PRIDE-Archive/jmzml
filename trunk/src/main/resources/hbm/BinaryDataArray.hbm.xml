<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <union-subclass name="uk.ac.ebi.jmzml.model.mzml.BinaryDataArray" table="BinaryDataArray"
                    extends="uk.ac.ebi.jmzml.model.mzml.ParamGroup">

        <property name="arrayLength" type="big_integer"/>
        <property name="encodedLength" type="big_integer"/>
        <many-to-one name="dataProcessing" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.DataProcessing" column="DataProcessing_hid" access="field"/>
        <property name="dataProcessingRef" type="string"/>
        <!--need to map it as a Blob type to prevent Oracle streaming error-->
        <property name="binary" type="org.hibernate.type.MaterializedBlobType"/>

    </union-subclass>
</hibernate-mapping>
