<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="property" package="uk.ac.ebi.jmzml.model.mzml">
    <class name="TargetList" table="TargetList">

        <id name="hid" column="hid" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>

        <property name="count" column="count" type="long" not-null="true"/>

        <list name="target" cascade="all" table="TargetList_Target" access="field">
            <key column="TargetList_hid"/>
            <!-- list-index should be used instead of index, index should be used only to support hibernate 2.x -->
            <list-index column="idx"/>
            <one-to-many class="ParamGroup"/>
        </list>
    </class>
</hibernate-mapping>