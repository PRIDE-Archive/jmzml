<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="uk.ac.ebi.jmzml.model.mzml" default-access="property">
    <union-subclass name="InstrumentConfiguration" table="InstrumentConfiguration" extends="ParamGroup">
        <one-to-one name="componentList" cascade="all" />
        <one-to-one name="softwareRef" cascade="all" />
        <property name="id" type="string" column="id" />
        <one-to-one name="scanSettings" cascade="all" />
    </union-subclass>
</hibernate-mapping>