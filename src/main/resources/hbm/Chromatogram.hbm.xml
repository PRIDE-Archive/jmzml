<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzml.model.mzml.Chromatogram"  table="Chromatogram"  extends="uk.ac.ebi.jmzml.model.mzml.ParamGroup">

        <many-to-one name="precursor" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.Precursor"/>
        <many-to-one name="product" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.Product"/>
        <one-to-one name="binaryDataArrayList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.BinaryDataArrayList"/>

        <property name="id" type="string"/>
        <property name="index" type="big_integer"/>
        <property name="defaultArrayLength" type="integer"/>
        <many-to-one name="dataProcessing" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.DataProcessing"/>
    </union-subclass>
</hibernate-mapping>
