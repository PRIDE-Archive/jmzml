<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzml.model.mzml.FileDescription" table="FileDescription" extends="uk.ac.ebi.jmzml.model.mzml.MzMLObject">
        <many-to-one name="fileContent" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.ParamGroup" column="FileContent_ParamGroup_hid"/>
        <many-to-one name="sourceFileList" cascade="all" class="uk.ac.ebi.jmzml.model.mzml.SourceFileList" column="SourceFileList_hid"/>
        <list name="contact" access="field" cascade="all" table="FileDescription_ParamGroup">
            <key column="FileDescription_hid"/>
            <index column="idx"/>
            <many-to-many column="ParamGroup_hid" class="uk.ac.ebi.jmzml.model.mzml.ParamGroup"/>
        </list>
    </union-subclass>
</hibernate-mapping>